{{ include header.sprt }}

<h1>Hello Wallboardr!</h1>
{{ if session.user }}
<a href="/admin" class="edit">Edit boards</a>
{{ /if }}

{{ get /data/boards?sort=name as boards }}

{{ if boards.length }}
	{{ each boards as board }}
		<div class="board">
			<h2>{{board.name}}</h2>
			<div class="desc">{{board.desc}}</div>
			<a href="/view/{{board.slug}}">View board</a>
		</div>
	{{ /each }}
{{ else }}
	<p>No boards</p>
{{ /if }}

{{ include footer.sprt }}